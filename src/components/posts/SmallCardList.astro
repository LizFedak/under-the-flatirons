---
import SmallCard from './SmallCard.astro';

export interface Props {
  posts: any[];
  showThumb?: boolean;
}

const { posts = [], showThumb = true } = Astro.props;
---

<ul class="small-card-list">
  {posts.map((p) => <SmallCard post={p} showThumb={showThumb} />)}
</ul>

<style>
  .small-card-list { 
    margin: 0; 
    padding: 0; 
    display: flex; 
    flex-direction: column; 
    gap: .5rem; 
  }
</style>
